	<namespace>http://liferay.com/faces/ui-internal</namespace>
	<description><![CDATA[<strong>Deprecated.</strong> Please use <code>portal</code> tags instead.]]></description>
	<function>
		<description><![CDATA[<strong>Deprecated.</strong> No replacement available. Converts a string to Unicode.]]></description>
		<function-name>toUnicodeString</function-name>
		<function-class>com.liferay.portal.kernel.util.UnicodeFormatter</function-class>
